        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>
        <link rel="shortcut icon" href="//gavinpereira.in/img/fav/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body class="bg-slate-800 text-white text-2xl py-10">
        <header class="container flex items-center justify-center mx-auto">
            <a href="//gavinpereira.in">
                <img src="//gavinpereira.in/img/wordmark.svg" class="h-10">
            </a>
        </header>
        <main class="prose prose-invert mx-auto px-5 py-10">
            {{ content | safe }}
